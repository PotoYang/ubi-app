<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:minHeight="@dimen/dialog_alert_min_height">


    <LinearLayout
        android:layout_width="@dimen/dialog_alert_min_width"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_white_normal"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <ProgressBar
            android:id="@+id/pbLoading"
            style="@style/myProgressStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateDuration="1200"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvLoadingMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/loading_msg"
            android:textColor="@color/body_content_text" />
    </LinearLayout>


</LinearLayout>